            font-size: 24px;
            display: flex;
            align-items: center;
            padding: 10px 20px 00px 20px;
            position: relative;
        }
        .header .logo {
            font-size: 40px;
            font-weight: bolder;
            color: black; /* Í∏ÄÏî®Ï≤¥Î•º Í≤ÄÏùÄÏÉâÏúºÎ°ú ÏÑ§Ï†ï */
            text-decoration: none; /* Î∞ëÏ§Ñ ÏóÜÏï†Í∏∞ */
        }
        .header .navbar {
            display: flex;
            justify-content: flex-start;
            background-color: #f9f9f9;
            margin-left: 30px; /* Adjust margin-left as needed */
        }
        .header .navbar a {
            font-weight: normal;
            color: black;
            padding: 14px 20px;
            font-size:0.9em;
            text-decoration: none;
            text-align: center;
        }
        .header .navbar a:hover {
            color: #007bff;
            cursor: pointer;
        }
        .header .user-info {
            display: flex;
            align-items: center;
            position: absolute;
            right: 20px;
        }
        .header .user-info a {
            margin-left: 10px;
            margin-right: 10px;
            color: black;
            text-decoration: none;
        }
        .header .user-info a:hover {
            color: #007bff;
            cursor: pointer;
        }
        .container {
            display: grid;
            grid-template-columns: 15% 75%;
            gap: 20px;
            padding: 0px 20px 20px 20px;
        }
        .sidebar {
            background-color: #f1f1f1;
            padding: 10px;
        }
        .content-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: auto auto;
            gap: 20px;
        }
        .content {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
        }
        .content h2 {
            background-color: #ccc;
            padding: 10px;
            margin: 0 0 10px 0;
        }
        .content h2 span {
            cursor: pointer;
        }
        .content h2 span:hover {
            color: #007bff;
            cursor: pointer;
        }
        .post {
            background-color: white;
            margin: 10px 0;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
        }
        .post h3 {
            margin: 0;
            margin-left: 5px;
            font-weight: 100;
        }
        .post h4 {
            margin: 5px;
        }
        .post p {
            margin: 5px 0;
        }
        .post a {
            font-size: 25px;
            color: black;
            text-decoration: none;
        }
        .post a:hover {
            color: #007bff;
        }
        .post .info {
            display: flex;
            justify-content: space-between;
        }
        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            background-color: #ffffff;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
            z-index: 1000;
            width: 200px;
        }
        .dropdown-menu a {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            color: #333;
            text-decoration: none;
        }
        .dropdown-menu a svg {
            margin-right: 10px; /* ÏïÑÏù¥ÏΩòÍ≥º ÌÖçÏä§Ìä∏ ÏÇ¨Ïù¥Ïùò Í∞ÑÍ≤© Ï°∞Ï†ï */
        }
        .dropdown-menu span {
            display: block;
            padding: 10px 15px;
            text-align: left;
            color: #333;
            font-size: 0.9em;
        }
    </style>
    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById('dropdown-menu');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }
        function goToBoard(category) {
            window.location.href = `/board/${category}`;
        }
    </script>
</head>
<body>
