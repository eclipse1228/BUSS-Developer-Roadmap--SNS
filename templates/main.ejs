    <style>
        @font-face {
            font-family: 'PR';
            src: url('https://fastly.jsdelivr.net/gh/Project-Noonnu/noonfonts_2107@1.1/Pretendard-Regular.woff') format('woff');
            font-weight: 400;
            font-style: normal;
        }

        body {
            font-family: 'PR';
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }
        .container {
            display: grid;
            grid-template-columns: 250px 1fr 250px; /* ÏÇ¨Ïù¥ÎìúÎ∞îÎ•º Í≥†Ï†ï ÎÑàÎπÑÎ°ú ÏÑ§Ï†ï */
            gap: 20px;
            padding: 0px 20px 20px 20px;
        }
        .content-area {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
        }
        .content-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: auto auto;
            gap: 20px;
            width: 100%;
        }
        .content {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
        }
        .content h2 {
            background-color: #d7d7db;
            padding: 20px;
            margin: 0 0 10px 0;
            position: relative;
            border-radius: 10px;
            background-image: url('/static/pattern.svg');
        }
        .content h2 span {
            cursor: pointer;
        }
        .content h2 span:hover {
            color: #007bff;
        }
        .content h2 .text-container {
            font-family: 'PR';
            position: relative;
            right: -10px;
        }
        .post {
            background-color: white;
            margin: 10px 0;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
        }
        .post h3 {
            margin: 0;
            margin-left: 5px;
            font-weight: 100;
        }
        .post h4 {
            margin: 5px;
        }
        .post p {
            margin: 5px 0;
        }
        .post a {
            font-size: 25px;
            color: black;
            text-decoration: none;
        }
        .post a:hover {
            color: #007bff;
        }
        .post .info {
            display: flex;
            justify-content: space-between;
        }
        .sidebar {
            background-color: #f9f9f9;
            padding: 10px;
            position: relative;
            width: 250px; /* ÏÇ¨Ïù¥ÎìúÎ∞î ÎÑàÎπÑ Í≥†Ï†ï */
        }
        .top-writers {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }
        .top-writers li {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
        .top-writers img {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin-right: 10px;
        }
        .writer-info {
            align-items: center;
        }
        .writer-name {
            text-decoration: none; /* ÎßÅÌÅ¨ Î∞ëÏ§Ñ ÏóÜÏï†Í∏∞ */
            color: inherit; /* Í∏∞Î≥∏ ÌÖçÏä§Ìä∏ ÏÉâÏÉÅ Ïú†ÏßÄ */
        }
        .writer-name:hover {
            color: #007bff; /* Ìò∏Î≤Ñ Ïãú ÌÖçÏä§Ìä∏ ÏÉâÏÉÅ Î≥ÄÍ≤Ω */
        }
        .banner {
            padding: 10px 20px;
            display: flex;
            justify-content: center;
            width: 100%;
        }
        .banner img {
            max-width: 100%;
            height: auto;
        }

        /* ÌôîÎ©¥ ÌÅ¨Í∏∞Í∞Ä 768px Ïù¥ÌïòÏùº Îïå Î†àÏù¥ÏïÑÏõÉ Ï°∞Ï†ï */
        @media (max-width: 768px) {
            .container {
                grid-template-columns: 1fr;
            }
            .content-grid {
                grid-template-columns: 1fr;
            }
            .sidebar {
                width: 100%; /* ÏûëÏùÄ ÌôîÎ©¥ÏóêÏÑú ÏÇ¨Ïù¥ÎìúÎ∞î ÎÑàÎπÑÎ•º 100%Î°ú ÏÑ§Ï†ï */
            }
        }
   
    </style>
    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById('dropdown-menu');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }
        function goToBoard(category) {
            window.location.href = `/board/${category}`;
        }
        function goToMyProfile() {
            const currentUserId = '<%= currentUser ? currentUser.id : "" %>';
            if (currentUserId) {
                window.location.href = `/profile/${currentUserId}`;
            } else {
                alert('Î°úÍ∑∏Ïù∏Ïù¥ ÌïÑÏöîÌï©ÎãàÎã§.');
            }
        }
    </script>
</head>
<body>
    <%- include('header') %>  
    <div class="container">
        <div class="sidebar">
            <h3>Top Writers</h3>
            <hr>
            <ol class="top-writers">
                <% if (typeof topwriters !== 'undefined') { %>
                    <% topwriters.forEach(writer => { %>
                        <li>
                            <img src="<%= writer.profileImageUrl || '/static/usericon.png' %>" alt="<%= writer.profileImageUrl %>">
                            <div class="writer-info">
                                <a href="/searchprofile/name/<%= writer.name %>" class="writer-name"><%= writer.name %></a>
                                <span class="writer-points">
                                    -<%= writer.postCount %>Ï†ê
                                </span>
                            </div>
                        </li>
                    <% }) %>
                <% } else { %>
                    <li>No top writers available.</li>
                <% } %>
            </ol>
        </div>

        <div class="content-area">
            <div class="banner">
                <a href="/">
                    <img src="/static/buss_banner.png" alt="Banner">
