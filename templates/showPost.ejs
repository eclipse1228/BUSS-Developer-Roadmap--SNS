<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= post.title %> - 게시물</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="../static/styles/header.css"> <!-- 헤더 스타일을 포함한 CSS 파일 -->
  <style>
    /* Header 스타일 */
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }
    /* Sidebar 스타일 */
    .sidebar {
      background-color: #f1f1f1;
      padding: 10px;
    }

    /* Content 스타일 */
    header, main, footer {
      padding: 20px;
    }

    .content {
      max-width: 1000px; /* 내용이 표시되는 최대 너비 */
      margin: 0 0 auto; /* 가운데 정렬을 위해 추가 */
      overflow-wrap: break-word; /* 단어 단위로 줄 바꿈 */
    }

    /* 폼 스타일 */
    form {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
    }

    textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-sizing: border-box;
    }

    button[type="button"] {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button[type="button"]:hover {
      background-color: #0056b3;
    }

    /* Container 스타일 */
    .container {
        display: grid;
        grid-template-columns: 15% 75%; /* 사이드바를 15%로 설정, 나머지 콘텐츠를 75%로 설정 */
        gap: 20px;
        padding: 20px;
    }

    /* 댓글 박스 크기 고정 */
    textarea {
      resize: none;
    }

    /* 댓글 박스와 좋아요 버튼 위치 조정 */
    form {
      position: relative;
    }

    form button[type="button"] {
      position: absolute;
      top: -50px; /* 댓글 폼의 위쪽에 위치시킴 */
      right: 0;
    }

    /* 댓글 구역 스타일링 */
    ul {
      padding: 0;
      list-style: none;
    }

    ul li {
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 10px;
    }

    /* 댓글 내용 및 작성자, 작성 시각 스타일링 */
    ul li .comment-content {
      font-weight: bold;
    }

    ul li .comment-meta {
      font-size: 12px;
      color: #888;
      text-align: right;
    }
  </style>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      loadComments();
    });

    function loadComments() {
      const postId = '<%= post._id %>';
      fetch(`/getComments/${postId}`)
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            const commentList = document.getElementById('commentList');
            commentList.innerHTML = ''; // 기존 댓글 비우기
            data.comments.reverse().forEach(comment => { // 최신 댓글이 맨 위로 오도록 reverse
              const li = document.createElement('li');
              li.innerHTML = `
                <div class="comment-content">${comment.content}</div>
                <div class="comment-meta">
                  ${comment.author.name} - ${new Date(comment.createdAt).toLocaleString()}
                </div>`;
              commentList.appendChild(li);
            });
          } else {
            alert('댓글을 불러오는 중 오류가 발생했습니다.');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('서버 오류가 발생했습니다.');
        });
    }

    function addComment() {
      const content = document.getElementById('commentContent').value;
      const post = '<%= post._id %>'; // 게시물의 ID
      fetch('/addComment', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ content, post })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert(data.message); // 성공 메시지 표시
          document.getElementById('commentContent').value = ''; // 댓글 작성 박스 초기화
          loadComments(); // 페이지 이동 대신 loadComments 호출
        } else {
          alert(data.message); // 실패 메시지 표시
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('서버 오류가 발생했습니다.');
      });
    }

    function addLike() {
      const postId = '<%= post._id %>';
      fetch(`/addLike/${postId}`,
      {
        method: 'POST'
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          document.getElementById('likeCount').textContent = data.likes;
        } else {
          alert('좋아요를 추가하는 중 오류가 발생했습니다.');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('서버 오류가 발생했습니다.');
      });
    }
    function goToChat() {
        window.location.href = '/chat';
    }
    function toggleDropdown() {
        const dropdown = document.getElementById('dropdown-menu');
        dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
    }
    function createPost() {
        window.location.href = '/createPost';
    }
  </script>
</head>
<body>
  <%- include('header') %> 
  <div class="container">
    <div class="sidebar">
      <!-- Sidebar 내용 추가 -->
      <!-- 여기에 원하는 내용을 추가하세요 -->
    </div>
    <div class="content">
      <section>
        <button type="button" onclick="addLike()">좋아요</button>
        <span id="likeCount"><%= post.likes %></span> Likes
      </section>
      <header>
        <p style="margin-bottom: -10px">카테고리: <%= post.category %></p>
        <p style="margin-bottom: -10px">작성자: <%= post.author.name %></p>
        <p>작성일: <%= new Date(post.createdAt).toLocaleString() %></p>
        <h1 style="margin-bottom: -10px;"><%= post.title %></h1>
      </header>
      <main>
        <article>
          <p><%= post.content %></p>
        </article>
        <hr>
        <section>
          <h2>댓글</h2>
          <form>
            <textarea id="commentContent" rows="4" cols="50" placeholder="댓글을 입력하세요"></textarea>
            <button type="button" onclick="addComment()">댓글 달기</button>
          </form>
          <ul id="commentList">
            <% post.comments.reverse().forEach(comment => { %> <!-- 최신 댓글이 맨 위로 -->
              <li>
                <div class="comment-author"><%= comment.author.name %></div>
                <div class="comment-meta"><%= new Date(comment.createdAt).toLocaleString() %></div>
                <div class="comment-content"><%= comment.content %></div>
              </li>       
            <% }) %>
          </ul>
        </section>
      </main>
    </div>
  </div>
</body>
</html>
